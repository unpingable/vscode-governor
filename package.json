{
  "name": "vscode-governor",
  "displayName": "Agent Governor",
  "description": "Security and continuity checking for agentic coding tools",
  "version": "2.2.0",
  "publisher": "agent-governor",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "workspaceContains:.governor",
    "onView:governorState",
    "onCommand:governor.showScope",
    "onCommand:governor.showScars",
    "onCommand:governor.runDoctor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "governor",
          "title": "Governor",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "governor": [
        {
          "id": "governorState",
          "name": "State"
        }
      ]
    },
    "commands": [
      {
        "command": "governor.checkFile",
        "title": "Governor: Check File"
      },
      {
        "command": "governor.checkSelection",
        "title": "Governor: Check Selection"
      },
      {
        "command": "governor.showOutput",
        "title": "Governor: Show Output"
      },
      {
        "command": "governor.refreshState",
        "title": "Governor: Refresh State",
        "icon": "$(refresh)"
      },
      {
        "command": "governor.showDetail",
        "title": "Governor: Show Detail"
      },
      {
        "command": "governor.toggleRealtime",
        "title": "Governor: Toggle Real-time Checking"
      },
      {
        "command": "governor.checkNow",
        "title": "Governor: Check Current File Now"
      },
      {
        "command": "governor.setProfile",
        "title": "Governor: Set Profile",
        "icon": "$(account)"
      },
      {
        "command": "governor.clearIntent",
        "title": "Governor: Clear Intent"
      },
      {
        "command": "governor.showIntent",
        "title": "Governor: Show Intent"
      },
      {
        "command": "governor.compareModels",
        "title": "Governor: Compare with Other Models",
        "icon": "$(git-compare)"
      },
      {
        "command": "governor.showSelfcheck",
        "title": "Governor: Show Self-Check Details"
      },
      {
        "command": "governor.showReceiptDetail",
        "title": "Governor: Show Receipt Detail"
      },
      {
        "command": "governor.showCorrelator",
        "title": "Governor: Show Correlator Status"
      },
      {
        "command": "governor.runPreflight",
        "title": "Governor: Run Preflight Checks"
      },
      {
        "command": "governor.showScope",
        "title": "Governor: Show Scope Status and Grants"
      },
      {
        "command": "governor.showScars",
        "title": "Governor: Show Scar Status"
      },
      {
        "command": "governor.runDoctor",
        "title": "Governor: Run Doctor Checks"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "governor.setProfile",
          "when": "view == governorState",
          "group": "navigation"
        },
        {
          "command": "governor.refreshState",
          "when": "view == governorState",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "governor.checkSelection",
          "when": "editorHasSelection",
          "group": "governor@1"
        },
        {
          "command": "governor.checkFile",
          "group": "governor@2"
        },
        {
          "command": "governor.compareModels",
          "group": "governor@3"
        }
      ]
    },
    "configuration": {
      "title": "Agent Governor",
      "properties": {
        "governor.executablePath": {
          "type": "string",
          "default": "governor",
          "description": "Path to the governor CLI executable (absolute path recommended for Remote SSH/WSL)"
        },
        "governor.checkOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run governor check automatically on file save"
        },
        "governor.mode": {
          "type": "string",
          "enum": [
            "auto",
            "code",
            "fiction",
            "nonfiction"
          ],
          "default": "auto",
          "description": "Governor operating mode"
        },
        "governor.realtimeChecking.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable real-time checking as you type (may impact performance)"
        },
        "governor.realtimeChecking.debounceMs": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "Delay in milliseconds before triggering a check after typing stops"
        },
        "governor.realtimeChecking.excludedLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "json",
            "yaml",
            "markdown",
            "plaintext"
          ],
          "description": "Language IDs to exclude from real-time checking"
        },
        "governor.hover.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show governor context (decisions, claims) on hover"
        },
        "governor.codeActions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show quick fix suggestions for governor findings"
        },
        "governor.interferometry.autoCompare": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run code compare after interferometry runs"
        },
        "governor.preflight.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Run preflight checks when workspace opens"
        },
        "governor.preflight.agent": {
          "type": "string",
          "default": "claude",
          "description": "Agent type for preflight checks (claude, codex, etc.)"
        },
        "governor.correlator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable correlator status polling"
        },
        "governor.correlator.pollIntervalMs": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 300000,
          "description": "Correlator poll interval in milliseconds"
        },
        "governor.correlator.captureThreshold": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Consecutive captured polls before Problems panel entry"
        },
        "governor.correlator.clearThreshold": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Consecutive OK polls before clearing capture alert"
        },
        "governor.backgroundActivity.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Master switch for all background activity (preflight, correlator, doctor polling)"
        },
        "governor.doctor.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Governor Doctor polling and Problems diagnostics"
        },
        "governor.doctor.pollIntervalMs": {
          "type": "number",
          "default": 60000,
          "minimum": 10000,
          "maximum": 600000,
          "description": "Polling interval for Governor Doctor checks in milliseconds"
        }
      }
    },
    "keybindings": [
      {
        "command": "governor.checkFile",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      },
      {
        "command": "governor.toggleRealtime",
        "key": "ctrl+shift+alt+g",
        "mac": "cmd+shift+alt+g"
      },
      {
        "command": "governor.setProfile",
        "key": "ctrl+shift+p ctrl+shift+g",
        "mac": "cmd+shift+p cmd+shift+g"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "lint": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unpingable/vscode-governor"
  },
  "bugs": {
    "url": "https://github.com/unpingable/vscode-governor/issues"
  },
  "homepage": "https://github.com/unpingable/agent_governor"
}
