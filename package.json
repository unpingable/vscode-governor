{
  "name": "vscode-governor",
  "displayName": "Agent Governor",
  "description": "Security and continuity checking for agentic coding tools",
  "version": "0.4.0",
  "publisher": "agent-governor",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "workspaceContains:.governor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "governor",
          "title": "Governor",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "governor": [
        {
          "id": "governorState",
          "name": "State"
        }
      ]
    },
    "commands": [
      {
        "command": "governor.checkFile",
        "title": "Governor: Check File"
      },
      {
        "command": "governor.checkSelection",
        "title": "Governor: Check Selection"
      },
      {
        "command": "governor.showOutput",
        "title": "Governor: Show Output"
      },
      {
        "command": "governor.refreshState",
        "title": "Governor: Refresh State",
        "icon": "$(refresh)"
      },
      {
        "command": "governor.showDetail",
        "title": "Governor: Show Detail"
      },
      {
        "command": "governor.toggleRealtime",
        "title": "Governor: Toggle Real-time Checking"
      },
      {
        "command": "governor.checkNow",
        "title": "Governor: Check Current File Now"
      },
      {
        "command": "governor.setProfile",
        "title": "Governor: Set Profile",
        "icon": "$(account)"
      },
      {
        "command": "governor.clearIntent",
        "title": "Governor: Clear Intent"
      },
      {
        "command": "governor.showIntent",
        "title": "Governor: Show Intent"
      },
      {
        "command": "governor.compareModels",
        "title": "Governor: Compare with Other Models",
        "icon": "$(git-compare)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "governor.setProfile",
          "when": "view == governorState",
          "group": "navigation"
        },
        {
          "command": "governor.refreshState",
          "when": "view == governorState",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "governor.checkSelection",
          "when": "editorHasSelection",
          "group": "governor@1"
        },
        {
          "command": "governor.checkFile",
          "group": "governor@2"
        },
        {
          "command": "governor.compareModels",
          "group": "governor@3"
        }
      ]
    },
    "configuration": {
      "title": "Agent Governor",
      "properties": {
        "governor.executablePath": {
          "type": "string",
          "default": "governor",
          "description": "Path to the governor CLI executable"
        },
        "governor.checkOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run governor check automatically on file save"
        },
        "governor.mode": {
          "type": "string",
          "enum": [
            "auto",
            "code",
            "fiction",
            "nonfiction"
          ],
          "default": "auto",
          "description": "Governor operating mode"
        },
        "governor.realtimeChecking.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable real-time checking as you type (may impact performance)"
        },
        "governor.realtimeChecking.debounceMs": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "Delay in milliseconds before triggering a check after typing stops"
        },
        "governor.realtimeChecking.excludedLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "json",
            "yaml",
            "markdown",
            "plaintext"
          ],
          "description": "Language IDs to exclude from real-time checking"
        },
        "governor.hover.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show governor context (decisions, claims) on hover"
        },
        "governor.codeActions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show quick fix suggestions for governor findings"
        },
        "governor.interferometry.autoCompare": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run code compare after interferometry runs"
        }
      }
    },
    "keybindings": [
      {
        "command": "governor.checkFile",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      },
      {
        "command": "governor.toggleRealtime",
        "key": "ctrl+shift+alt+g",
        "mac": "cmd+shift+alt+g"
      },
      {
        "command": "governor.setProfile",
        "key": "ctrl+shift+p ctrl+shift+g",
        "mac": "cmd+shift+p cmd+shift+g"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "lint": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.3.0",
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  }
}
